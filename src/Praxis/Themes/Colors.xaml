<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 
    Praxis Color Palette
    Designed for calm, focused clinical work.
    Low contrast, warm neutrals, minimal visual noise.
    -->
    
    <!-- Background Colors -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#FAFAF9" />
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#F5F5F4" />
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#E7E5E4" />
    <SolidColorBrush x:Key="BackgroundHover" Color="#F0EFED" />
    <SolidColorBrush x:Key="BackgroundSelected" Color="#E8E6E3" />
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="TextPrimary" Color="#1C1917" />
    <SolidColorBrush x:Key="TextSecondary" Color="#44403C" />
    <SolidColorBrush x:Key="TextMuted" Color="#78716C" />
    <SolidColorBrush x:Key="TextDisabled" Color="#A8A29E" />
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderLight" Color="#E7E5E4" />
    <SolidColorBrush x:Key="BorderMedium" Color="#D6D3D1" />
    <SolidColorBrush x:Key="BorderFocus" Color="#78716C" />
    
    <!-- Accent Colors (used sparingly) -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#4A7C59" />
    <SolidColorBrush x:Key="AccentPrimaryHover" Color="#3D6B4A" />
    <SolidColorBrush x:Key="AccentSecondary" Color="#7C9A92" />
    <SolidColorBrush x:Key="AccentWarm" Color="#B8860B" />
    
    <!-- Status Colors (muted, not alarming) -->
    <SolidColorBrush x:Key="StatusInfo" Color="#6B8E9B" />
    <SolidColorBrush x:Key="StatusSuccess" Color="#7C9A7C" />
    <SolidColorBrush x:Key="StatusWarning" Color="#C9A227" />
    <SolidColorBrush x:Key="StatusAttention" Color="#A67B5B" />
    
    <!-- Card/Surface Colors -->
    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF" />
    <SolidColorBrush x:Key="CardBorder" Color="#E7E5E4" />
    
</ResourceDictionary>
